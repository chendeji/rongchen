<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.chendeji.rongchen.common.view.SpanableTextView
        android:id="@+id/st_current_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp" />

    <com.chendeji.rongchen.common.view.SpanableTextView
        android:id="@+id/st_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/st_current_price"
        android:layout_toRightOf="@id/st_current_price" />

    <!--<Button-->
        <!--android:id="@+id/bt_buy"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true" />-->

    <com.rey.material.widget.Button
        android:id="@+id/bt_buy"
        style="@style/FlatColorButtonRippleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/horizontal_16dp_margin"
        android:layout_alignParentRight="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
        android:textColor="@color/common_button_textcolor"
        app:rd_delayClick="afterRelease" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_buy"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_is_refundable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="随时退"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_purchase_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</merge>