<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/route_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/horizontal_16dp_margin"
        android:background="@drawable/arrow_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/horizontal_10dp"
        android:layout_marginRight="@dimen/horizontal_10dp"
        android:layout_marginTop="@dimen/horizental_24dp_margin"
        android:layout_marginBottom="@dimen/horizental_24dp_margin"
        android:layout_toLeftOf="@id/route_item_arrow"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/horizontal_10dp">

            <TextView
                android:id="@+id/tv_route_line_name"
                style="@style/common_max_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="79路"
                android:textColor="@color/common_button_textcolor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_route_line_detail"
                style="@style/common_middle_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34分钟 | 3.3公里 | 1元" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>